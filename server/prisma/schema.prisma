generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LookingFor {
  RELATIONSHIP
  CASUAL_DATES
  PARTY_PARTNER
  FRIENDS
  HANGOUTS
  WATCH_MOVIE
  EXPLORING_CITY_AND_CAFE
  TIME_SPENDING
  FINDING_OUT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id            String   @id @db.Uuid
  email         String?

  authName      String?   // Google / Apple name (hidden, metadata)
  displayName   String?   // User-entered name (shown in app)
  surname       String?   // private, optional

  dob           DateTime? @db.Date
  age           Int?
  gender        Gender?
  interestedIn  Gender[]
  height        String?
  location      String?
  lookingFor    LookingFor[]

  onboardingCompleted Boolean @default(false)


  createdAt     DateTime @default(now())

  profile       Profile?
  photos        Photo[]

  @@map("users")
}


model Profile {
  userId             String   @id @db.Uuid
  bioPrompt1         String?
  bioPrompt2         String?
  bioPrompt3         String?
  availableNext8Days Boolean[]

  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model Photo {
  id         String   @id @default(uuid())
  userId     String   @db.Uuid
  imageUrl   String
  position   Int
  isPrimary  Boolean  @default(false)
  createdAt DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, position])
  @@map("photos")
}
